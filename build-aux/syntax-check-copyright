BEGIN {
    (my $ME = $0) =~ s|.*/||;
    if (!defined $b) {
        warn "usage: $ME -b=STRING [-e=STRING] [-t=FILE] FILE...\n";
        exit 255;
    }
    if (defined $e) {
        $e = '  ' . $e;
        $p = '';
        $q = '';
        $s = '\s' x (length ($b) + 1);
    }
    else {
        $e = '';
        $p = "$b ";
        $q = "$b";
        $s = '';
    }
    if (!defined $t) {
        $t = $0;
    }
    open my $file, '<', $t;
    $regex = <$file>;
    close $file;
    $regex =~ /^.*?\n\#\s(Copyright.*?)\n\n+/s;
    $regex = $1;
    $regex =~ s/^\#\n/$q\n/gm;
    $regex =~ s/^#\ /$p/gm;
    $regex = qr(\Q$b\E\s([\w\-\.]+\s--\s[^\n]+\.\n$s$p)?\Q$regex$e\E\n\n\S);
}

/$regex/m or die "error:$ARGV: bad license text\n";

