eval '(exit $?0)' && eval 'exec perl -s -0777 -wnl "$0" ${1+"$@"}'
  & eval 'exec perl -s -0777 -wnl "$0" $argv:q'
    if 0;
# Check the syntax of copyright notice of input files.
my $VERSION = '2016-03-24 20:24 UTC';

